{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Assign `📦 deps` and `🤖 bot` labels, and for major updates `⚠️ major`",
  "packageRules": [
    {"labels": ["📦 deps", "🤖 bot"], "matchPackageNames": ["*"]},
    {"labels": ["⚠️ major", "📦 deps", "🤖 bot"], "matchUpdateTypes": ["major"]}
  ],
  "dependencyDashboardLabels": ["🤖 bot"]
}
