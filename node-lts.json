{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Update CI images to use the latest LTS of Node.js",
  "packageRules": [
    {
      "allowedVersions": "<=24",
      "matchPackageNames": ["cimg/node", "circleci/node", "node"],
      "schedule": ["at any time"]
    }
  ]
}
