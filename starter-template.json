{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "These presets are adapted to Sanity starter template maintenance, the aim is to reduce noise further and to increase stability.",
  "extends": [
    "github>sanity-io/renovate-config",
    "github>sanity-io/renovate-config:studio-v3",
    "schedule:quarterly",
    ":semanticCommitTypeAll(chore)"
  ],
  "ignorePresets": [
    "github>sanity-io/renovate-config:schedule",
    "github>sanity-io/renovate-config:semantic-commit-type",
    "github>sanity-io/renovate-config:strategy"
  ],
  "packageRules": [{
    "matchDepTypes": ["engines"],
    "matchManagers": ["npm"],
    "rangeStrategy": "widen"
  }],
  "rangeStrategy": "pin"
}
