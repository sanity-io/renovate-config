{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sanity-io/renovate-config"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "semanticCommitScope": "isRange={{isRange}} isBump={{isBump}} isLockfileUpdate={{isLockfileUpdate}} isGroup={{isGroup}} isSingleVersion={{isSingleVersion}}",
      "semanticCommitType": "fallbackchore"
    },
    {
      "matchDepTypes": [
        "dependencies",
        "engines",
        "optionalDependencies",
        "peerDependencies"
      ],
      "matchManagers": ["npm"],
      "semanticCommitType": "{{#if (and isSingleVersion isLockfileUpdate)}}chorechore{{else}}fixfix{{/if}}"
    }
  ],
  "ignorePresets": [
    ":semanticPrefixFixDepsChoreOthers",
    "github>sanity-io/renovate-config:group-non-major"
  ]
}
