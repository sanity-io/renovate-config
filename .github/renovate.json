{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sanity-io/renovate-config"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "semanticCommitScope": "isRange={{isRange}} isLockfileUpdate={{isLockfileUpdate}} isGroup={{isGroup}} isSingleVersion={{isSingleVersion}}"
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies", "peerDependencies", "optionalDependencies", "engines"],
      "semanticCommitType": "fixfix"
    }
  ]
}
