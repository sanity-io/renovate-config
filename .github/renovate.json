{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sanity-io/renovate-config"],
  "packageRules": [
    {
      "group": {
        "semanticCommitScope": "group isRange={{isRange}} isLockfileUpdate={{isLockfileUpdate}} isGroup={{isGroup}} isSingleVersion={{isSingleVersion}}",
        "semanticCommitType": "groupchore"
      },
      "matchManagers": ["npm"],
      "semanticCommitScope": "isRange={{isRange}} isLockfileUpdate={{isLockfileUpdate}} isGroup={{isGroup}} isSingleVersion={{isSingleVersion}}",
      "semanticCommitType": "fallbackchore"
    },
    {
      "matchDepTypes": [
        "dependencies",
        "engines",
        "optionalDependencies",
        "peerDependencies"
      ],
      "matchManagers": ["npm"],
      "semanticCommitType": "{{#if isLockfileUpdate}}chorechore{{else}}fixfix{{/if}}",
      "group": {
        "semanticCommitType": "{{#if isRange}}groupfixfix{{else}}{{#if isLockfileUpdate}}groupchorechorechore{{else}}groupfixfixfix{{/if}}{{/if}}"
      }
    }
  ],
  "ignorePresets": [":semanticPrefixFixDepsChoreOthers"]
}
