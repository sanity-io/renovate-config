{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sanity-io/renovate-config"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "semanticCommitScope": "isRange={{isRange}} isLockfileUpdate={{isLockfileUpdate}} isSingleVersion={{isSingleVersion}}",
      "semanticCommitType": "chore"
    },
    {
      "group": {
        "semanticCommitType": "{{#if isLockfileUpdate}}{{#unless isRange}}groupfix2{{else}}groupchore{{/unless}}{{else}}groupfix1{{/if}}"
      },
      "matchDepTypes": [
        "dependencies",
        "engines",
        "optionalDependencies",
        "peerDependencies"
      ],
      "matchManagers": ["npm"],
      "semanticCommitType": "{{#if isLockfileUpdate}}chorechore{{else}}fixfix{{/if}}"
    }
  ],
  "ignorePresets": [":semanticPrefixFixDepsChoreOthers"]
}
