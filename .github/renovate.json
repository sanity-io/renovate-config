{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sanity-io/renovate-config"],
  "ignorePresets": ["github>sanity-io/renovate-config:group-non-major"],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "overrides", "resolutions"],
      "rangeStrategy": "update-lockfile",
      "semanticCommitType": "isBump={{isBump}} isRange={{isRange}} isLockfileUpdate={{isLockfileUpdate}}",
      "group": {
        "semanticCommitType": "isBump={{isBump}} isRange={{isRange}} isLockfileUpdate={{isLockfileUpdate}} current={{currentVersion}}=>{{currentValue}} new={{newVersion}}=>{{newValue}} indentation={{indentation}}"
      }
    },
    {
      "description": "Groups every update type except major",
      "excludeDepNames": ["npm", "pnpm", "yarn"],
      "groupName": "non-major",
      "excludeUpdateTypes": ["major"]
    }
  ]
}
